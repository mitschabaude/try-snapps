{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "outDir": "./build",
    "rootDir": "./src",
    "useDefineForClassFields": false,
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"]
}
